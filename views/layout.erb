<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
	<head>
		<title>RMU log.</title>
		<style type='text/css'>
			body {
				margin: 0;
				padding: 0;
				border: 0.5em dashed #4682b4;
				border-bottom: 0;

				font-family: helvetica; arial;
				font-size: 1.2em;
			}
			#menu {
				margin: 1em;
				padding: 1em;

				width: auto;

				background: #4682b4;

				font-family: helvetica, arial;
				text-align: center;
			}
			#content {
			}
			.message {
			  padding: 0.1em 5em;
			}
			.timestamp {
			  position: relative;
			  float: left;
			  margin-right: 1em;
			  
			  color: grey;
			}
			.username {
			  position: relative;
			  float: left;
			  
			  width: 8em;
			  
			  color: #4682b4;
			  font-weight: bold;
		  }
			.message:nth-child(odd) .username {color: black;}
			.message:nth-child(even) {background: white;}
			.message:nth-child(odd)  {background: #dcdcdc;}

			
		</style>
	</head>

	<body>
		<div id='menu'>
			<h1><a href='/latest'>RECENT LOG</a></h1>
			<h1><a href='/full'>FULL LOG</a></h1>
			<h1><a href='/old'>OLD LOG</a></h1>
		</div>
		<%= yield %>
	</body>
</html>
